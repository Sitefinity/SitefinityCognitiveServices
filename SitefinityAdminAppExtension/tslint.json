{
  "rulesDirectory": [
    "node_modules/tslint-eslint-rules/dist/rules",
    "node_modules/codelyzer"
  ],
  "rules": {

    "adjacent-overload-signatures": true,
    "align": [
      true,
      "parameters"
    ],

    "class-name": true,
    "comment-format": [
      true,
      "check-space"
    ],

    "cyclomatic-complexity": [
       true,
       20
    ],
    "eofline": true,
    "forin": true,
    "indent": [
      true,
      "spaces"
    ],
    "interface-name": [
      true,
      "never-prefix"
    ],
    "label-position": true,

    "member-access": false,
    "member-ordering": [
      true,
      {
        "order": "statics-first"
      }
    ],
    "new-parens": true,
    "no-any": false,
    "no-arg": true,
    "no-bitwise": false,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": true,
    "no-console": [
      true,
      "log",
      "warn",
      "error",
      "debug",
      "info",
      "time",
      "timeEnd",
      "trace"
    ],
    "no-construct": true,
    "no-debugger": true,
    "no-duplicate-variable": true,
    "no-empty": false,
    "no-eval": true,
    "no-internal-module": true,
    "no-trailing-whitespace": true,
    "no-var-keyword": true,
    "one-line": [
      true,
      "check-open-brace",
      "check-whitespace"
    ],
    "quotemark": [
      true,
      "double"
    ],
    "semicolon": [
      true,
      "always"
    ],
    "triple-equals": [
      true,
      "allow-null-check"
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-pascal-case",
      "allow-leading-underscore"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-type"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "never",
        "singleline": "never"
      }
    ],
    "no-empty": true,
    "no-extra-semi": true,
    "no-inner-declarations": [
      true,
      "both"
    ],
    "no-irregular-whitespace": false,
    "use-isnan": true,
    "no-unused-expression": true,
    "no-conditional-assignment": true,
    "eofline": true,
    "no-consecutive-blank-lines": true,
    "one-variable-per-declaration": true,
    "member-ordering": [
      true,
      "public-before-private",
      "variables-before-functions"
    ],
    "directive-selector": [
      true,
      "attribute",
      "sf",
      "camelCase"
    ],
    "component-selector": [
      true,
      "element",
      "sf",
      "kebab-case"
    ],
    "pipe-naming": [
      true,
      "camelCase",
      "sf"
    ],
    "use-input-property-decorator": true,
    "use-output-property-decorator": true,
    "use-host-property-decorator": true,
    "no-attribute-parameter-decorator": true,
    "no-input-rename": true,
    "no-output-rename": true,
    "use-life-cycle-interface": true,
    "use-pipe-transform-interface": true,
    "component-class-suffix": true,
    "directive-class-suffix": true,
    "import-destructuring-spacing": true
  }
}
